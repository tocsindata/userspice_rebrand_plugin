<?xml version="1.0" encoding="UTF-8"?>
<plugin>
  <name>ReBrand</name>
  <folder>rebrand</folder>
  <version>2.0.0</version>
  <release_date>2025-09-24</release_date>

  <author>Tocsin Data</author>
  <website>https://tocsindata.io/</website>
  <category>Appearance</category>

  <description>
    ReBrand for UserSpice 5: centralized branding tools (head tags/meta, icons/favicons, menu labels, and site
    settings) with automatic backups and cache-busting. Admin-only (User ID 1). No theme chrome injected; works
    inside the Plugin Manager view.
  </description>

  <!-- Compatibility -->
  <min_php>8.0</min_php>
  <min_us_version>5.0.0</min_us_version>
  <tested_us_versions>5.x</tested_us_versions>

  <!-- Admin entry point (relative to usersc/plugins/rebrand/) -->
  <admin>admin/settings.php</admin>

  <!-- Button text in Plugin Manager -->
  <button>ReBrand</button>

  <!-- Database tables created/used by the plugin -->
  <db_tables>
    <table>us_rebrand_file_backups</table>
    <table>us_rebrand_menu_backups</table>
    <table>us_rebrand_site_backups</table>
  </db_tables>

  <!-- Optional preview/icon (relative path); safe to omit file if not present -->
  <image>assets/rebrand-preview.png</image>

  <!-- Notes for Plugin Manager UI (plain text) -->
  <notes>
    Requires User ID 1 to access admin actions. Uses <?=$us_url_root?> for URLs in generated PHP.
  </notes>
</plugin>
